{
  "extends": "next/core-web-vitals",
  "rules": {
    "@typescript-eslint/no-var-requires": "off",
    "no-var-requires": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-unused-vars": "off",
    "import/no-extraneous-dependencies": "off"
  },
  "overrides": [
    {
      "files": ["electron-starter.js", "preload.js"],
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "@typescript-eslint/no-var-requires": "off",
        "no-var-requires": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "import/no-unresolved": "off",
        "global-require": "off",
        "no-console": "off",
        "no-process-env": "off"
      },
      "env": {
        "node": true,
        "browser": true
      }
    }
  ]
} 